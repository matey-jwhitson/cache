datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

// --- Auth (NextAuth v5) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(MEMBER)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
}

enum Role {
  ADMIN
  MEMBER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Core AEO Models ---

model AuditRun {
  id           String        @id @default(cuid())
  provider     String
  model        String
  totalPrompts Int           @default(0)
  successful   Int           @default(0)
  failed       Int           @default(0)
  startedAt    DateTime      @default(now())
  completedAt  DateTime?
  results      AuditResult[]
}

model AuditResult {
  id           String   @id @default(cuid())
  runId        String
  run          AuditRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  promptId     String
  provider     String
  responseText String
  mentioned    Boolean  @default(false)
  mentionRank  Int?
  similarity   Float    @default(0)
  meta         Json     @default("{}")
  createdAt    DateTime @default(now())

  @@index([runId])
  @@index([provider])
  @@index([createdAt])
}

model ContentArtifact {
  id        String   @id @default(cuid())
  kind      String
  path      String
  content   String
  createdAt DateTime @default(now())
}

model ReinforcementLog {
  id         String   @id @default(cuid())
  promptId   String
  provider   String
  model      String
  response   String
  mentioned  Boolean  @default(false)
  similarity Float    @default(0)
  meta       Json     @default("{}")
  createdAt  DateTime @default(now())

  @@index([provider])
}

model BrandProfile {
  id               Int      @id @default(1)
  name             String
  url              String
  mission          String?
  positioning      String?
  voiceTone        String?
  readingLevel     String?
  brandTerms       Json     @default("[]")
  forbiddenPhrases Json     @default("[]")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ICP {
  id           String   @id @default(cuid())
  name         String   @unique
  description  String?
  pains        Json     @default("[]")
  jobsToBeDone Json     @default("[]")
  geos         Json     @default("[]")
  segments     Json     @default("[]")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model IntentTaxonomy {
  id          String   @id @default(cuid())
  text        String   @unique
  intentClass String
  meta        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContentSource {
  id            String    @id @default(cuid())
  name          String
  sourceType    String
  config        Json      @default("{}")
  enabled       Boolean   @default(true)
  lastFetchedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ContentItem {
  id         String   @id @default(cuid())
  title      String
  author     String?
  sourceType String
  status     String   @default("new")
  content    String
  createdAt  DateTime @default(now())
}

model JobRun {
  id              String    @id @default(cuid())
  jobType         String
  status          String    @default("running")
  triggeredBy     String?
  startedAt       DateTime  @default(now())
  completedAt     DateTime?
  durationSeconds Float?
  errorMessage    String?
}

model ApiCost {
  id        String   @id @default(cuid())
  provider  String
  model     String
  operation String
  jobRunId  String?
  tokensIn  Int      @default(0)
  tokensOut Int      @default(0)
  costUsd   Float    @default(0)
  timestamp DateTime @default(now())
}

model AuditLog {
  id         String   @id @default(cuid())
  entityType String
  entityId   String?
  action     String
  details    Json     @default("{}")
  createdAt  DateTime @default(now())

  @@index([entityType])
  @@index([createdAt])
}

model AppConfig {
  id    String @id @default(cuid())
  key   String @unique
  value Json
}
